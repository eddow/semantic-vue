{
  "compilerOptions": {
	"sourceMap": true,
	"declaration": true,
	"sourceRoot": "src",
	"outDir": "dist",
	"inlineSources": true,
	"noImplicitAny": false,
	"module": "commonjs",
	"moduleResolution": "node",
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
	"target": "es5",
	"lib": [
		"dom",
		"es5",
		"es6",
		"es2015.promise"
	],
	"allowSyntheticDefaultImports": true,
	"baseUrl": ".",
	"paths": {
	  	"lib/*": ["./src/lib/*"],
	  	"directives/*": ["./src/directives/*"],
		"components/*": ["./src/components/*"]
	}
	},
	"exclude": [
		"**/*.spec.ts",
		"**/*.d.ts"
	],
	"include": [
		"./src/**/*.ts",
		"./src/**/*.vue"
	]
}