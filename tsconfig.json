{
  "compilerOptions": {
    "sourceMap": true,
	"sourceRoot": "../../src/",
	"outDir": "../dist/",
	"inlineSources": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": [
		"dom",
		"es6",
		"es2015.promise"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
	"typeRoots": ["../node_modules/@types"],
	"baseUrl": ".",
	"paths": {
		"lib/*": ["./src/lib/*"],
		"components/*": ["./src/components/*"],
		"directives/*": ["./src/directives/*"]
    },
  },
	"exclude": [
		"**/*.spec.ts",
		"**/*.d.ts"
	],
	"include": [
		"./**/*.ts",
		"./**/*.vue", "src/webpack.config.js"
	]
}